<%include ./partials/header %>
<div class="ui main text container">
    <div class="ui hug header">one woofer's thoughts on...</div>
    <div class="ui top attached segment">
        <div class="ui divided items">
            <% blogs.forEach(function(blog){ %>
                <div class="item">
                    <div class="image">
                        <img src="<%= blog.image %>">
                    </div>
                    <div class="content">
                        <a class="header" href="/blogs/<%= blog._id%>"><%= blog.title %></a>
                        <div class="meta">
                            <span><%= blog.created.toDateString() %></span>
                        </div>
                        <div class="description">
                            <p><%- blog.body.substring(0, 140) %>...</p>
                        </div>
                        <div class="extra">
                            <div class="ui blue basic animated button" tabindex="0">
                                <a href="/blogs/<%= blog._id%>">
                                    <div class="visible content">Read More</div>
                                        <div class="hidden content">
                                            <i class="right chevron icon"></i></i>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        </div>
                    </div>
            <% }) %>
        </div>
    </div>
</div>
<%include ./partials/footer %>